.container{
  width: 100%;
  height: 100%;
  background: linear-gradient(to top right,rgba(202, 32, 245, 0.884),rgba(255, 0, 0, 0.637));
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #FFFFFF;
}
.menu{
  width: 96%;
  margin: auto;
}
.myRelease{
  padding: 5rpx 0 5rpx 20rpx;
  border-top:2rpx solid #FFFFFF;
  border-bottom:2rpx solid #FFFFFF;
  color: #FFFFFF;
  position: relative;
  padding-bottom: 5rpx;
}
.just-a-mark{
  position: relative;
  left: 480rpx;
}
.quit-login-btn{
  width: 100%;
  line-height: 60rpx;
  color: red;
  letter-spacing: 5rpx;
  position: absolute;
  bottom: 0rpx;
}
