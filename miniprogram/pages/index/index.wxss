.container{
  width: 100%;
}
.search{
  width: 100%;
  height: 70rpx;
  padding-top: 10rpx;
  display: inline-flex;
  padding-left: 30rpx;
  background-color: rgba(202, 32, 245, 0.884);
}
input{
  width: 75%;
  height: 80%;
  border-radius: 35rpx 0 0 35rpx;
  padding-left: 30rpx;
  padding-top: 5rpx;
  background-color: #FFFFFF;
  margin-right: 20rpx;
}
icon{
  padding-top: 5rpx;
}
.classify{
  width: 100%;
  height: 76rpx;
  display: inline-flex;
  justify-content: space-around;
  color: #FFFFFF;
}
.commodity,.books{
  width: 40%;
  height: 60rpx;
  background: linear-gradient(to top right,rgba(202, 32, 245, 0.884),rgba(255, 0, 0, 0.637));
  border-radius: 30rpx;
  text-align: center;
  font-weight: bold;
  z-index: 1000;
  margin-top: 8rpx;
  padding-top: 2rpx;
  letter-spacing: 20rpx;
  border: none;
  box-shadow: 3rpx 3rpx 2rpx #888888;
}
.showAllMsg{
  text-align: right;
  padding-right: 20rpx;
  height: 50rpx;
  color: #FFFFFF;
  background: linear-gradient(to top right, rgba(255, 0, 0, 0.637) , rgb(51, 51, 250));
}
.showlist{
  width: 100%;
  height: 155rpx;
  border-bottom: 2rpx dashed rgba(255, 0, 0, 0.637);
  padding-left:15rpx;
  font-size: 90%;
}
.line1{
  width: 95%;
  display: flex;
  justify-content: space-between;
}
.line2{
  width: 95%;
  display: inline-flex;
}
.line2-left{
  width: 60%;
}
.line2-right{
  width: 40%;
}
.line2-Msg{
  display: inline-flex;
  width: 100%;
  margin-top: 5rpx;
  padding-left: 10rpx;
}
.btn1{
  height: 50rpx;
  line-height: 40rpx;
  font-size: 90%;
  letter-spacing: 5rpx;
  border-radius: 10rpx;
  width: 180rpx;
  margin-top: 40rpx;
  padding-top: 5rpx;
  background-color: rgba(202, 32, 245, 0.884);
  color: #FFFFFF;
}
.thename{
  color: rgba(202, 32, 245, 0.884);
  font-weight: bold;
}